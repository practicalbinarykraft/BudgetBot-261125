{
  "expo": {
    "name": "BudgetBot",
    "slug": "budgetbot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "budgetbot",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.budgetbot.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "BudgetBot needs access to your microphone for voice input to add transactions.",
        "NSCameraUsageDescription": "BudgetBot needs camera access to scan receipts.",
        "NSPhotoLibraryUsageDescription": "BudgetBot needs photo library access to select receipt images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.budgetbot.app",
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow BudgetBot to access your camera for receipt scanning."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow BudgetBot to access your microphone for voice input."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
